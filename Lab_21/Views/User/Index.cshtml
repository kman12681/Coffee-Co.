
@{
    ViewBag.Title = "User Index";
}

<h2>User Registration</h2>
<h3>Fill out this form to start receiving monthly beans</h3>
<hr />

<form class="form-horizontal" action="User/Register" method="get">

    <div class="form-group">
        <label for="First Name" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="text" name="FirstName" id="firstname" class="form-control" placeholder="First Name" />
    </div>

    <div class="form-group">
        <label for="Last Name" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="text" name="LastName" class="form-control" placeholder="Last Name" />
    </div>

    <div class="form-group">
        <label for="Email" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="text" name="Email" id="email" class="form-control" placeholder="Email" />
        <span id="EmailWarning"></span>
    </div>

    <div class="form-group">
        <label for="Number" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="number" name="Number" id="number" class="form-control" placeholder="Phone Number" />
    </div>

    <div class="form-group">
        <label for="Password" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="text" name="Password" class="form-control" placeholder="Password" />
    </div>

    <div class="form-group">
        <label for="CupsDay" class="col-sm-6 control-label"></label>
        <div class="col-sm-6"></div>
        <input type="text" name="CupsDay" id="cups" class="form-control" placeholder="Avg cups per day" />
        <span id="CupsWarning"></span>

        </div>
        <!--<div class="dropdown">
             <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Desired Strength<span class="caret"></span></button>
             <ul class="dropdown-menu">
                 <li><a href="#">Light</a></li>
                 <li><a href="#">Medium</a></li>
                 <li><a href="#">Bold</a></li>
                 </ul>
        </div>-->
        <div class="form-group">
            <label for="Strength" class="col-sm-6 control-label"></label>
            <div class="col-sm-6"></div>
            <input type="text" name="Strength" id="strength" class="form-control" placeholder="Desired Strength" />
            <span id="StrengthWarning"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-4"></div>
            <div class="col-sm-4" style="text-align:center">

                <input type="submit" class="btn btn-primary" id="btn" onclick="return Validate();" value="Register" />
                <input type="reset" class="btn btn-warning" value="Reset Form" />
            </div>
            <div class="col-sm-4"></div>
        </div>

</form>

<script>

    function Validate() {
        // alert("CheckCups running");
        if (/^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(document.getElementById("email").value)) {
            return CheckCups();
        }
        document.getElementById("EmailWarning").innerHTML =
            "<b>" + "You have entered an invalid email address </b>";
        return (false);
    }        
      
    function CheckCups() {

        var cups = document.getElementById("cups").value;
        if (cups > 5 || cups < 1) {
            document.getElementById("CupsWarning").innerHTML =
                "<b>" + "Choose 1-5 </b>";
            return false;
        }
        return true();

    }    

    function CheckStrength() {
        //alert("CheckStrength running");
        var strength = document.getElementById("strength").value;
        if (strength !== "light" || strength !== "medium" || strength !== "bold") {
            document.getElementById("StrengthWarning").innerHTML =
                "<b>" + "choose light, medium, or bold</b>";
            return false;
        }
        return true;
    }

    
</script>




